{{columns/hb-milestone-header
  column=model
  issues=sortedIssues
  isCollapsed=isCollapsed
  editMilestone=(action attrs.editMilestone)
}}

{{#if isCreateVisible}}
  {{columns/hb-quick-issue
    column=model
    createFullscreenIssue=(action attrs.createFullscreenIssue)
  }}
{{/if}}

<ul class="cards sortable">
  {{#each sortedIssues as |issue|}}
    {{
      hb-milestone-card
        issue=issue
        issues=sortedIssues
        columns=columns
        repos=repos
        taskColumns=taskColumns
        cardClick=(action attrs.openFullscreenIssue issue)
    }}
  {{/each}}
</ul>
<div class="collapsed"></div>
