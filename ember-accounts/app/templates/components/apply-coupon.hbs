<div class="fullscreen-credit-card">
  <form>
    <div class="modal-header">
      <div>
        <button type="button" class="close" {{action 'close'}} data-dismiss="modal" aria-hidden="true">Ã—</button>
        Redeem a Coupon! 
      </div>
    </div>
    <div class="modal-body">
      <div class="form-row full">
        <p> (applied against your next invoice of greater than $0.00) </p>
          <label>
            Coupon:
          </label>
          {{coupon-code-field value=coupon}}
      </div>
      {{#if errors}}
        <div class="alert alert-error">{{errors}}</div>
      {{/if}}
      {{#if processingAction }}
        <div class="fullscreen-overlay">
        </div>
      {{/if}}
    </div>
    <div class="modal-footer">
      <button {{action 'apply_coupon'}} href="#" class="stripe-connect light-blue" type="submit"
                                                         disabled={{isDisabled}}><span> Redeem </span></button>
    </div>
  </form>
</div>
