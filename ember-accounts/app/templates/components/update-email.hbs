<div class="fullscreen-credit-card">
  <form>
    <div class="modal-header">
      <button type="button" class="close" {{action 'close' bubbles=false}} data-dismiss="modal" aria-hidden="true">Ã—</button>
      Update Account Email
    </div>
    <div class="modal-body">
      <fieldset>
        <div class="form-row full">
          <label>
            <span>Email Address</span>
          </label>
          {{input value=email type="email" required=true}}
        </div>
        {{#if errors}}
          <div class="alert alert-error">{{errors}}</div>
        {{/if}}
      </fieldset>

      {{#if processing}}
        <div class="fullscreen-overlay">
        </div>
      {{/if}}
    </div>
    <div class="modal-footer">
      <button type="submit" {{action 'update'}} class="stripe-connect light-blue" disabled={{processing}}><span>Save</span></button>
    </div>
  </form>
</div>
