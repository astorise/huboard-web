<div class="container">
<h1>Accounts</h1>

<div class="row">
  <div class="col-md-3">
    <ul class="nav nav-list">
      <li>
        {{#link-to "index"}}
        <img height="24" width="24" src={{model.user.gravatar_url}}>
        {{model.user.login}}
        {{/link-to}}
      </li>

      {{#each model.orgs as |org|}}
      <li>
        {{#link-to "profile" org}}
        <img height="24" width="24" src={{org.gravatar_url}} />
        {{ org.login }}
        {{/link-to}}
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-9">
    {{outlet}}
  </div>
</div>
</div>
