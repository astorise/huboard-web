<div class="container">
<h1>Accounts</h1>

<div class="row">
  <div class="span3">
    <ul class="nav nav-list">
      <li>
        {{#link-to "user_profile"}}
        <img height="24" width="24" src={{model.user.gravatar_url}}>
        {{model.user.login}}
        {{/link-to}}
      </li>

      {{#each model.orgs as |org|}}
      <li>
        {{#link-to "profile" org}}
        <img height="24" width="24" src={{org.gravatar_url}} />
        {{ org.login }}
        {{/link-to}}
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="span9">
    {{outlet}}

    <div>
      <strong>Have questions?</strong> Email us anytime at support@huboard.com
    </div>
  </div>
</div>
</div>
