{
  "name": "HuBoard",
  "description":"Instant priority management for your GitHub issues!",
  "website": "https://huboard.com",
  "repository": "https://github.com/huboard/huboard",
  "logo": "https://huboard.com/assets/github/HuDark@2x.png",
  "success_url":"/",
  "scripts": {
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_S3_BUCKET": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "BUILDPACK_URL": {
      "required": true
    },
    "COUCH_DATABASE": {
      "required": false,
      "value": "huboard"
    },
    "COUCH_URL": {
      "required": false
    },
    "ELASTICSEARCH_URL": {
      "required": false
    },
    "GITHUB_API_ENDPOINT": {
      "required": true,
      "value": "https://api.github.com/"
    },
    "GITHUB_CLIENT_ID": {
      "required": true,
      "description": "The client id property from you GitHub developer application"
    },
    "GITHUB_SECRET": {
      "required": true,
      "description": "The secret key property from you GitHub developer application"
    },
    "GITHUB_WEB_ENDPOINT": {
      "required": true,
      "value": "https://github.com/"
    },
    "GITHUB_WEBHOOK_ENDPOINT": {
      "required": true,
      "description": "HuBoard needs the url to your application, ie; https://funky-huboard.herokuapp.com/site"
    },
    "HEROKU_APP_ID": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "HEROKU_RELEASE_VERSION": {
      "required": true
    },
    "HEROKU_SLUG_COMMIT": {
      "required": true
    },
    "HEROKU_SLUG_DESCRIPTION": {
      "required": true
    },
    "HUBOARD_ENV": {
      "required": true,
      "value": "oss"
    },
    "LANG": {
      "required": true,
      "value": "en_US.UTF-8"
    },
    "WEB_CONCURRENCY": {
      "value": "2"
    },
    "MAX_THREADS": {
      "required": true,
      "value": "3"
    },
    "RACK_ENV": {
      "required": true,
      "value": "production"
    },
    "RAILS_ENV": {
      "required": true,
      "value": "production"
    },
    "SECRET_KEY_BASE": {
      "required": true,
      "generator": "secret"
    },
    "SELF_HOST_FAYE": {
      "description": "Mounts faye as a rack middleware",
      "required": true,
      "value": "true"
    },
    "SOCKET_BACKEND": {
      "required": true,
      "value": "/site/pubsub"
    },
    "WARDEN_GITHUB_VERIFIER_SECRET": {
      "required": true,
      "generator": "secret"
    }
  },
  "addons": [
    "rediscloud",
    "memcachier"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-multi"
    }
  ]
}
